{
  "name": "zenon-desktop-app",
  "version": "1.0.2",
  "description": "ZENON veritabanı için desktop arama uygulaması",
  "main": "main.js",
  "scripts": {
    "start": "electron . --disable-gpu-cache --disable-disk-cache",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "cross-env NODE_ENV=development concurrently \"npm run dev\" \"wait-on http://localhost:3000 && npm run start\"",
    "electron:build": "npm run build && npm run start",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:token": "set GH_TOKEN=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 && electron-builder"
  },
  "keywords": [
    "electron",
    "react",
    "mssql",
    "zenon"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@amcharts/amcharts5": "^5.13.5",
    "electron-updater": "^6.6.2",
    "mssql": "^10.0.2",
    "path-browserify": "^1.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.0.0",
    "cross-env": "^10.0.0",
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "electron-vite": "^4.0.0",
    "vite": "^7.1.2",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.hkenergy.dashboard",
    "productName": "HK Energy Dashboard",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "zeynepvrl",
        "repo": "Yat-r-mc-Tesis-zleme"
      }
    ]
  }
}
